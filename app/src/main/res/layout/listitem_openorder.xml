<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvLiOpenOrdersPair"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ETH-BTC"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/tvliOpenOrdersType"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="@+id/tvliOpenOrdersType"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.49" />

    <TextView
        android:id="@+id/tvliOpenOrdersAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="1.00000000"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/lblLiOpenOrdersAmount"
        app:layout_constraintRight_toLeftOf="@+id/tvLiOpenOrdersRate"
        app:layout_constraintTop_toBottomOf="@+id/lblLiOpenOrdersAmount" />

    <TextView
        android:id="@+id/tvLiOpenOrdersRate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:text="1.00000000"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/lblLiOpenOrdersRate"
        app:layout_constraintTop_toBottomOf="@+id/lblLiOpenOrdersRate"
        app:layout_constraintRight_toLeftOf="@+id/ivLiOpenOrdersCancel"
        android:layout_marginRight="0dp" />

    <TextView
        android:id="@+id/tvliOpenOrdersType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="Buy"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/lblLiOpenOrdersType"
        app:layout_constraintRight_toLeftOf="@+id/tvliOpenOrdersAmount"
        app:layout_constraintTop_toBottomOf="@+id/lblLiOpenOrdersType" />

    <TextView
        android:id="@+id/tvliOpenOrdersTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="October 10, 2017 11:00AM"
        android:textAllCaps="false"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvliOpenOrdersId"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/tvLiOpenOrdersRate" />

    <ImageView
        android:id="@+id/ivLiOpenOrdersCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501"
        app:srcCompat="@android:drawable/ic_delete" />

    <TextView
        android:id="@+id/lblLiOpenOrdersType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="Type"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.252" />

    <TextView
        android:id="@+id/lblLiOpenOrdersAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.39" />

    <TextView
        android:id="@+id/lblLiOpenOrdersRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate"
        android:textSize="8sp"
        android:textStyle="bold"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.65" />

    <TextView
        android:id="@+id/tvliOpenOrdersId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="2dp"
        android:text="asdfuiysd78fasd768f6asd78sdf678"
        android:textSize="7sp"
        app:layout_constraintBottom_toBottomOf="@+id/lvlLiOpenOrdersId"
        app:layout_constraintLeft_toRightOf="@+id/lvlLiOpenOrdersId" />

    <TextView
        android:id="@+id/lvlLiOpenOrdersId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:text="@string/lbl_order_id"
        android:textSize="8sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLiOpenOrdersPair" />

</android.support.constraint.ConstraintLayout>