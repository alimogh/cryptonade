<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvLiTickerPair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ETH-BTC"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/lblLiTickerPair"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/lblLiTickerPair" />

    <TextView
        android:id="@+id/tvliOpenOrdersAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.00000000"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/lblLiTickerLowestAsk"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/lblLiTickerLowestAsk" />

    <TextView
        android:id="@+id/tvLiTickerHighestBid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.00000000"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/lblLiTickerHighestBid"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/lblLiTickerHighestBid" />

    <TextView
        android:id="@+id/tvliOpenOrdersType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/lblLiTickerLast"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/lblLiTickerLast"
        app:layout_constraintRight_toLeftOf="@+id/tvLiTickerHighestBid"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/tvliOpenOrdersTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-1dp"
        android:text="October 10, 2017 11:00AM"
        android:textAllCaps="false"
        android:textSize="8sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLiTickerPair" />

    <ImageView
        android:id="@+id/ivLiOpenOrdersCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501"
        app:srcCompat="@android:drawable/ic_delete" />

    <TextView
        android:id="@+id/lblLiTickerPair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Pair"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblLiTickerLast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Type"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.25" />

    <TextView
        android:id="@+id/lblLiTickerLowestAsk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.44" />

    <TextView
        android:id="@+id/lblLiTickerHighestBid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate"
        android:textSize="8sp"
        android:textStyle="bold"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.71" />

    <TextView
        android:id="@+id/tvliOpenOrdersId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:text="asdfuiysd78fasd768f6asd78sdf678"
        android:textSize="7sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>