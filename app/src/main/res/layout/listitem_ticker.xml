<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvLiTickerPair"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="ETH-BTC"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblLiTickerLast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="32dp"
        android:text="@string/last_trade"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLiTickerLast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.05000000"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/lblLiTickerLast"
        app:layout_constraintTop_toBottomOf="@+id/lblLiTickerLast" />

    <TextView
        android:id="@+id/lblLiTickerVolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/volume"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLiTickerVolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.05000000"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/lblLiTickerVolume"
        app:layout_constraintTop_toBottomOf="@+id/lblLiTickerVolume" />

    <TextView
        android:id="@+id/tvLiTickerVolumeCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="BTC"
        android:textAllCaps="false"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/tvLiTickerVolume"
        app:layout_constraintTop_toTopOf="@+id/tvLiTickerVolume"
        app:layout_constraintRight_toLeftOf="@+id/lblLiTickerLowestAsk"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/lblLiTickerLowestAsk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/lowest_ask"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tvLiTickerHighestBid"
        app:layout_constraintTop_toBottomOf="@+id/tvLiTickerHighestBid" />

    <TextView
        android:id="@+id/tvLiTickerLowestAsk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.00000000"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/lblLiTickerLowestAsk"
        app:layout_constraintTop_toBottomOf="@+id/lblLiTickerLowestAsk" />

    <TextView
        android:id="@+id/lblLiTickerLowest24hr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/lowest24hr"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tvLiTickerHighest24hr"
        app:layout_constraintTop_toBottomOf="@+id/tvLiTickerHighest24hr" />

    <TextView
        android:id="@+id/tvLiTickerLowest24hr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="-4dp"
        android:text="1.00000000"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lblLiTickerLowest24hr"
        app:layout_constraintTop_toBottomOf="@+id/lblLiTickerLowest24hr" />

    <TextView
        android:id="@+id/lblLiTickerHighestBid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/highest_bid"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.62"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLiTickerHighestBid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="1.00000000"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tvLiTickerHighest24hr"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lblLiTickerHighestBid"
        app:layout_constraintTop_toBottomOf="@+id/lblLiTickerHighestBid" />

    <TextView
        android:id="@+id/lblLiTickerHighest24Hr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/highest24hr"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.91"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLiTickerHighest24hr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:text="1.00000000"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/lblLiTickerHighest24Hr"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblLiTickerHighest24Hr" />

</android.support.constraint.ConstraintLayout>